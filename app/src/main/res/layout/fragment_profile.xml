<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="160dp"
               android:orientation="horizontal"
               android:background="@color/purple_500"
               android:elevation="6dp"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/profile_Image_View"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logowhite"
                       android:layout_gravity="center"
                       android:layout_margin="10dp"
                       />

                   <ImageView
                       android:id="@+id/image_add_button"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/addicon"
                       android:layout_marginLeft="30dp"
                       android:layout_marginTop="-30dp"

                       >



                   </ImageView>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <TextView
                       android:id="@+id/proifle_username"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Blood Link 0608"
                       android:textSize="18sp"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:layout_margin="7dp"
                       android:layout_gravity="center"/>
                   <TextView
                       android:id="@+id/profile_mobile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="017"

                       android:layout_margin="7dp"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:layout_gravity="center"/>
                   <TextView
                       android:id="@+id/profile_email"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="mail.com"
                       android:layout_margin="7dp"
                       android:textColor="@color/white"
                       android:textStyle="bold"

                       android:layout_gravity="center"/>

                   <TextView
                       android:id="@+id/profile_status"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="mail.com"
                       android:layout_margin="7dp"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:layout_gravity="center"/>


               </LinearLayout>

           </LinearLayout>



           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="130dp"
               android:layout_marginTop="-10dp"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               app:cardElevation="10dp"
               app:cardCornerRadius="5dp"
               android:elevation="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_margin="5dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_weight="1">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/protector"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Life Safe"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:id="@+id/profile_lifesaved"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="@color/black"/>



                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_weight="1">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/bloodgroup"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Blood Group"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:id="@+id/profile_blood_group"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=""
                           android:textColor="@color/black"
                           />



                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_weight="1">

                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/donate"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Last Donate Date"
                           android:textStyle="bold"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:id="@+id/profile_last_blood_give"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=""
                           android:textColor="@color/black"
                           />



                   </LinearLayout>



               </LinearLayout>


           </androidx.cardview.widget.CardView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_margin="10dp"
                   >

                   <androidx.cardview.widget.CardView
                       android:id="@+id/mypostcard"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       app:cardCornerRadius="10dp"
                       android:elevation="10dp"
                       android:layout_margin="5dp"
                       app:cardElevation="5dp"
                       android:layout_weight="1">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center"
                           >
                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="60dp"
                               android:src="@drawable/bookicon"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Tips"
                               android:textStyle="bold"
                               android:textColor="@color/black"
                               />


                       </LinearLayout>




                   </androidx.cardview.widget.CardView>


                   <androidx.cardview.widget.CardView
                       android:id="@+id/ambulancecard"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       app:cardCornerRadius="10dp"
                       android:elevation="10dp"
                       android:layout_margin="5dp"
                       app:cardElevation="5dp"
                       android:layout_weight="1">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center"
                           >
                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="60dp"
                               android:src="@drawable/ambulance"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Ambulance"
                               android:textStyle="bold"
                               android:textColor="@color/black"
                               />


                       </LinearLayout>




                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:id="@+id/profileupdatecard"
                       android:focusable="true"
                       android:clickable="true"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       app:cardCornerRadius="10dp"
                       android:elevation="10dp"
                       android:layout_margin="5dp"
                       app:cardElevation="5dp"
                       android:layout_weight="1">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center">

                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="60dp"
                               android:src="@drawable/donate"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Update Info"
                               android:textStyle="bold"
                               android:textColor="@color/black"
                               />

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:layout_marginTop="15dp"
               >

               <TextView
                   android:id="@+id/update_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Update App"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_system_update_24"
                   android:textColor="@android:color/black"/>

               <TextView
                   android:id="@+id/facebook_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Facebook Page"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_facebook_24"
                   android:textColor="@android:color/black"/>

               <TextView
                   android:id="@+id/inviteId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Invite Friends"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_group_24"
                   android:textColor="@android:color/black"/>


               <TextView
                   android:id="@+id/privacyId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Privacy &amp; Policy"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_sticky_note_2_24"
                   android:textColor="@android:color/black"/>
               <TextView
                   android:id="@+id/ratingUs"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Rate Us"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_stars_24"
                   android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/aboutId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   About Us"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableStart="@drawable/ic_baseline_help_outline_24"
                   android:textColor="@android:color/black"/>
               <TextView
                   android:id="@+id/logoutBtn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="   Log Out"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/ic_baseline_settings_power_24"
                   android:textColor="@android:color/black"/>
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="App Version: 4.1.0"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:padding="5dp"
                   android:textColor="@android:color/black"/>


           </LinearLayout>



<!--           <Button-->
<!--               android:id="@+id/updateId"-->
<!--               android:layout_width="match_parent"-->
<!--               android:textAllCaps="false"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:text="Update Profile Information"/>-->
           
       </LinearLayout>
       
       
   </LinearLayout>
    
</ScrollView>